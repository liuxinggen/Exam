<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="未答数："
        android:textColor="#080808"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_tyes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已答数："
            android:textColor="#e1a158"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_tno"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:textColor="#477fab"
            android:layout_height="wrap_content"
            android:text="未答数："
            android:textSize="16sp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_otrue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="答对数："
            android:textColor="#e16868"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_ofalse"
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:text="答错数："
            android:textColor="#563aa4"
            android:textSize="16sp" />


    </LinearLayout>

    <TextView
        android:id="@+id/tv_totalTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textColor="#6dd695"
        android:text="总题数："
        android:textSize="20sp" />

</LinearLayout>
